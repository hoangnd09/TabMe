<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#D8D8D8"
                android:centerColor="#E6E6E6"
                android:endColor="#D8D8D8"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#e7e7e8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#D8D8D8"
                android:centerColor="#BDBDBD"
                android:endColor="#D8D8D8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e7e7e8" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
